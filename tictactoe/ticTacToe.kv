<Cell>:
    background_down: self.background_normal
    background_disabled_normal: self.background_normal
    on_size: self.font_size = f'{min(self.width, self.height)/2}sp'

<Game>:
    menu: menu
    board: board

    Board:
        id: board
        cols: 3
        pos: root.pos
        size: root.size
        on_parent: self._reset_board(root._play_turn)
    ModalView:
        id: menu
        title: winner
        pos: root.center
        on_parent: root.remove_widget(self)
        auto_dismiss: False
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: winner
            Button:
                text: 'Play Again'
                on_press: root._reset()
            Button:
                text: 'Quit'
                on_press: app.stop()

